<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.obsinity</groupId>
  <artifactId>obsinity-bom</artifactId>
  <version>0.1.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Obsinity :: BOM</name>

  <properties>
    <!-- core libs -->
    <otel.api.version>1.53.0</otel.api.version>
    <jackson.version>2.19.2</jackson.version>

    <!-- http transports -->
    <httpclient5.version>5.3.1</httpclient5.version>
    <okhttp.version>4.12.0</okhttp.version>

    <!-- spring framework -->
    <spring.framework.version>6.2.10</spring.framework.version>

    <!-- storage stack -->
    <hikari.version>5.1.0</hikari.version>
    <flyway.version>10.17.3</flyway.version>
    <postgres.version>42.7.4</postgres.version>

    <!-- test -->
    <junit.jupiter.version>5.13.4</junit.jupiter.version>

    <!-- plugin versions (only needed here if this module is built standalone) -->
    <spotless.maven.plugin.version>2.43.0</spotless.maven.plugin.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>3.5.5</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <!-- Internal artifacts (tie to reactor version) -->
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-api</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-core</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-transport-spi</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-transport-apache</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-transport-okhttp</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-transport-jdkhttp</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-transport-resttemplate</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-transport-webclient</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-logging-sink</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-client-testkit</artifactId><version>${project.version}</version></dependency>

      <!-- NEW: server-side internal artifacts -->
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-service-core</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-service-storage</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-controller-rest</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-controller-admin</artifactId><version>${project.version}</version></dependency>
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-controller-otlp</artifactId><version>${project.version}</version></dependency>
      <!-- (reference app usually doesnâ€™t need to be in BOM, but harmless if you add it)
      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-reference-service</artifactId><version>${project.version}</version></dependency>
      -->

      <!-- Externals pinned here -->
      <dependency><groupId>io.opentelemetry</groupId><artifactId>opentelemetry-api</artifactId><version>${otel.api.version}</version></dependency>

      <!-- HTTP clients -->
      <dependency><groupId>org.apache.httpcomponents.client5</groupId><artifactId>httpclient5</artifactId><version>${httpclient5.version}</version></dependency>
      <dependency><groupId>com.squareup.okhttp3</groupId><artifactId>okhttp</artifactId><version>${okhttp.version}</version></dependency>

      <!-- Spring Framework (non-Boot) -->
      <dependency><groupId>org.springframework</groupId><artifactId>spring-web</artifactId><version>${spring.framework.version}</version></dependency>
      <dependency><groupId>org.springframework</groupId><artifactId>spring-webflux</artifactId><version>${spring.framework.version}</version></dependency>
      <dependency><groupId>org.springframework</groupId><artifactId>spring-jdbc</artifactId><version>${spring.framework.version}</version></dependency>

      <!-- Jackson -->
      <dependency><groupId>com.fasterxml.jackson.core</groupId><artifactId>jackson-databind</artifactId><version>${jackson.version}</version></dependency>

      <!-- Storage stack -->
      <dependency><groupId>com.zaxxer</groupId><artifactId>HikariCP</artifactId><version>${hikari.version}</version></dependency>
      <dependency><groupId>org.flywaydb</groupId><artifactId>flyway-core</artifactId><version>${flyway.version}</version></dependency>
      <dependency><groupId>org.postgresql</groupId><artifactId>postgresql</artifactId><version>${postgres.version}</version></dependency>

      <!-- Test BOM -->
      <dependency>
        <groupId>org.junit.jupiter</groupId>
        <artifactId>junit-jupiter</artifactId>
        <version>${junit.jupiter.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <dependency><groupId>com.obsinity</groupId><artifactId>obsinity-core</artifactId><version>${project.version}</version></dependency>

      <dependency>
        <groupId>io.opentelemetry</groupId>
        <artifactId>opentelemetry-sdk-trace</artifactId>
        <version>${otel.api.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <!-- Declare Spotless here so reactor runs don't fail on BOM -->
  <build>
    <plugins>
      <plugin>
        <groupId>com.diffplug.spotless</groupId>
        <artifactId>spotless-maven-plugin</artifactId>
        <version>${spotless.maven.plugin.version}</version>
        <configuration>
          <!-- BOM has no sources to format; skip to satisfy reactor execution -->
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
