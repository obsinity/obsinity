<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.obsinity</groupId>
  <artifactId>obsinity-parent</artifactId>
  <version>0.1.2-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Obsinity :: Parent</name>

  <modules>
    <module>obsinity-bom</module>

    <module>obsinity-client-api</module>
    <module>obsinity-client-core</module>
    <module>obsinity-client-transport-spi</module>
    <module>obsinity-client-transport-apache</module>
    <module>obsinity-client-transport-okhttp</module>
    <module>obsinity-client-transport-jdkhttp</module>
    <module>obsinity-client-transport-resttemplate</module>
    <module>obsinity-client-transport-webclient</module>
    <module>obsinity-client-transport-rabbitmq</module>
    <module>obsinity-ingest-kafka</module>

    <!-- removed: obsinity-client-logging-sink (replaced by obsinity-collection-sink-logging) -->
    <module>obsinity-client-testkit</module>

    <module>obsinity-reference-client</module>
    <module>obsinity-reference-client-spring</module>

    <module>obsinity-service-core</module>
    <module>obsinity-controller-rest</module>
    <module>obsinity-controller-admin</module>
    <module>obsinity-controller-otlp</module>
    <module>obsinity-ingest-rabbitmq</module>
    <module>obsinity-reference-service</module>
    <module>obsinity-core</module>
    
    <!-- Collection SDK (agnostic of Obsinity transport) -->
    <module>obsinity-collection-api</module>
    <module>obsinity-collection-core</module>
    <module>obsinity-collection-spring</module>
    <module>obsinity-collection-sink-logging</module>
    <module>obsinity-collection-sink-obsinity</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <!-- Java 17 baseline -->
    <java.version>17</java.version>
    <maven.compiler.release>${java.version}</maven.compiler.release>

    <!-- Plugin versions -->
    <maven.compiler.plugin.version>3.14.0</maven.compiler.plugin.version>
    <maven.surefire.plugin.version>3.5.3</maven.surefire.plugin.version>
    <maven.enforcer.plugin.version>3.6.1</maven.enforcer.plugin.version>
    <pitest.maven.plugin.version>1.16.2</pitest.maven.plugin.version>
    <pitest.junit5.plugin.version>1.2.1</pitest.junit5.plugin.version>
    <junit.platform.launcher.version>1.12.2</junit.platform.launcher.version>
    <spring-boot.version>3.5.5</spring-boot.version>

    <!-- Spotless / Palantir -->
    <spotless.maven.plugin.version>2.43.0</spotless.maven.plugin.version>
    <palantir.java.format.version>2.28.0</palantir.java.format.version>

    <!-- Library versions -->
    <flyway.version>11.7.2</flyway.version>
    <jackson.version>2.17.1</jackson.version>
    <lombok.version>1.18.32</lombok.version>
    <postgresql.version>42.7.3</postgresql.version>
    <caffeine.version>3.1.8</caffeine.version>

    <cucumber.version>7.14.0</cucumber.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.obsinity</groupId>
        <artifactId>obsinity-bom</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <!-- Manage intra-repo Collection SDK module versions -->
      <dependency>
        <groupId>com.obsinity</groupId>
        <artifactId>obsinity-collection-api</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.obsinity</groupId>
        <artifactId>obsinity-collection-core</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.obsinity</groupId>
        <artifactId>obsinity-collection-spring</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.obsinity</groupId>
        <artifactId>obsinity-collection-sink-logging</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.obsinity</groupId>
        <artifactId>obsinity-collection-sink-obsinity</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.obsinity</groupId>
        <artifactId>obsinity-client-transport-rabbitmq</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>${lombok.version}</version>
      <scope>provided</scope>
    </dependency>
    <!-- No need for palantir-java-format-spi as a direct dep; Spotless pulls what it needs -->
  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <!-- deploy plugin -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>3.1.1</version>
        </plugin>

        <!-- Compiler -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${maven.compiler.plugin.version}</version>
          <configuration>
            <parameters>true</parameters>
            <release>${maven.compiler.release}</release>
          </configuration>
        </plugin>

        <!-- Surefire -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>${maven.surefire.plugin.version}</version>
          <configuration>
            <useModulePath>false</useModulePath>
          </configuration>
        </plugin>

        <!-- Enforcer -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-enforcer-plugin</artifactId>
          <version>${maven.enforcer.plugin.version}</version>
          <executions>
            <execution>
              <id>enforce-java</id>
              <goals><goal>enforce</goal></goals>
              <configuration>
                <rules>
                  <requireJavaVersion>
                    <version>[17,)</version>
                  </requireJavaVersion>
                </rules>
              </configuration>
            </execution>
          </executions>
        </plugin>

        <!-- Pin Spring Boot plugin so children don't warn -->
        <plugin>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-maven-plugin</artifactId>
          <version>${spring-boot.version}</version>
        </plugin>

        <!-- Spotless (version managed here) -->
        <plugin>
          <groupId>com.diffplug.spotless</groupId>
          <artifactId>spotless-maven-plugin</artifactId>
          <version>${spotless.maven.plugin.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <!-- Spotless across all modules -->
      <plugin>
        <groupId>com.diffplug.spotless</groupId>
        <artifactId>spotless-maven-plugin</artifactId>
        <configuration>
          <lineEndings>UNIX</lineEndings>
          <java>
            <palantirJavaFormat version="2.28.0"/>
            <removeUnusedImports/>
            <formatAnnotations/>
            <includes>
              <include>**/*.java</include>
            </includes>
          </java>
        </configuration>
        <executions>
          <!-- CI-safe: fail build if not formatted -->
          <execution>
            <id>spotless-check-on-verify</id>
            <phase>verify</phase>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>

          <execution>
            <id>spotless-apply-on-validate</id>
            <phase>validate</phase>
            <goals>
              <goal>apply</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <!-- Placeholder profiles for environment-specific tweaks -->
  <profiles>
    <profile>
      <id>mutation-testing</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <pitest.targetClasses>com.obsinity.*</pitest.targetClasses>
        <pitest.targetTests>com.obsinity.*Test</pitest.targetTests>
        <pitest.report.dir>${project.build.directory}/pit-reports</pitest.report.dir>
        <pitest.verbose>false</pitest.verbose>
        <pitest.debug>false</pitest.debug>
        <pitest.excludedProjects>obsinity-service-core</pitest.excludedProjects>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.pitest</groupId>
            <artifactId>pitest-maven</artifactId>
            <version>${pitest.maven.plugin.version}</version>
            <dependencies>
              <dependency>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-junit5-plugin</artifactId>
                <version>${pitest.junit5.plugin.version}</version>
              </dependency>
              <dependency>
                <groupId>org.junit.platform</groupId>
                <artifactId>junit-platform-launcher</artifactId>
                <version>${junit.platform.launcher.version}</version>
              </dependency>
            </dependencies>
            <configuration>
              <testPlugin>junit5</testPlugin>
              <targetClasses>
                <param>${pitest.targetClasses}</param>
              </targetClasses>
              <targetTests>
                <param>${pitest.targetTests}</param>
              </targetTests>
              <reportsDirectory>${pitest.report.dir}</reportsDirectory>
              <timestampedReports>false</timestampedReports>
              <failWhenNoMutations>false</failWhenNoMutations>
              <threads>1</threads>
              <outputFormats>
                <param>HTML</param>
                <param>XML</param>
              </outputFormats>
              <useClasspathJar>true</useClasspathJar>
              <verbose>${pitest.verbose}</verbose>
              <debug>${pitest.debug}</debug>
              <excludedProjects>${pitest.excludedProjects}</excludedProjects>
              <jvmArgs>
                <param>--add-opens</param>
                <param>java.base/java.lang=ALL-UNNAMED</param>
                <param>--add-opens</param>
                <param>java.base/java.lang.invoke=ALL-UNNAMED</param>
                <param>--add-opens</param>
                <param>java.base/java.util=ALL-UNNAMED</param>
                <param>--add-opens</param>
                <param>java.base/java.lang.reflect=ALL-UNNAMED</param>
                <param>--add-opens</param>
                <param>java.base/java.util.concurrent=ALL-UNNAMED</param>
                <param>--add-opens</param>
                <param>java.base/java.io=ALL-UNNAMED</param>
                <param>--add-opens</param>
                <param>java.sql/java.sql=ALL-UNNAMED</param>
                <param>-XX:ErrorFile=${project.build.directory}/pit-hs_err_pid%p.log</param>
              </jvmArgs>
            </configuration>
            <executions>
              <execution>
                <id>run-pitest</id>
                <phase>verify</phase>
                <goals>
                  <goal>mutationCoverage</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>dev</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <!-- Add dev-scoped properties here if needed -->
      </properties>
    </profile>
    <profile>
      <id>local</id>
      <properties>
        <!-- Intentionally identical to 'dev' for now -->
      </properties>
    </profile>
  </profiles>
</project>
